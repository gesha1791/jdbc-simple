<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
   http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">


    <changeSet id="1"  author="ievgen">
        <createTable tableName="post">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column  name="content"  type="varchar(255)">
                <constraints  nullable="false"/>
            </column>
            <column name="created" type="DATETIME">
                <constraints  nullable="false"/>
            </column>
            <column name="updated" type="DATETIME">
                <constraints  nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2"  author="ievgen">
        <insert tableName="post">
            <column name="content" value="Hello Kiev"></column>
            <column name="created" value="2020-01-01T12:23:32"></column>
            <column name="updated" value="2020-01-01T12:23:32"></column>
        </insert>
        <insert tableName="post">
            <column name="content" value="Hello Viena"></column>
            <column name="created" value="2020-01-01T12:23:42"></column>
            <column name="updated" value="2020-01-01T12:23:42"></column>
        </insert>
        <insert tableName="post">
            <column name="content" value="Hello Riga"></column>
            <column name="created" value="2020-01-01T12:23:52"></column>
            <column name="updated" value="2020-01-01T12:23:52"></column>
        </insert>
    </changeSet>

    <changeSet id="3"  author="ievgen">
        <createTable tableName="region">
            <column autoIncrement="true"  name="id"  type="BIGINT">
                <constraints  primaryKey="true"  nullable="false"/>
            </column>
            <column  name="name"  type="varchar(50)">
                <constraints  nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet id="4"  author="ievgen">
        <insert tableName="region">
            <column name="name" value="Kiev"></column>
        </insert>
        <insert tableName="region">
            <column name="name" value="Riga"></column>
        </insert>
        <insert tableName="region">
            <column name="name" value="Viena"></column>
        </insert>
    </changeSet>


    <changeSet id="5"  author="ievgen">
        <createTable tableName="user">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column  name="firstName"  type="varchar(255)">
                <constraints  nullable="false"/>
            </column>
            <column name="lastName" type="varchar(255)">
                <constraints  nullable="false"/>
            </column>
            <column name="post_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_user_post"
                             references="user_post(id_user)"/>
            </column>

            <column name="region_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_user_region"
                             references="region(id)"/>
            </column>
            <column name="role" type="varchar(255)">
                <constraints  nullable="false"/>
            </column>
        </createTable>

    </changeSet>

    <changeSet id="6"  author="ievgen">
        <insert tableName="user">
            <column name="firstName" value="Ievgen"></column>
            <column name="lastName" value="Chaplinskiy"></column>
            <column name="region_id" value="1"></column>
            <column name="post_id" value="1"></column>
            <column name="role" value="ADMIN"></column>
        </insert>

        <insert tableName="user">
            <column name="firstName" value="Mark"></column>
            <column name="lastName" value="Sevost"></column>
            <column name="post_id" value="2"></column>
            <column name="role" value="MODERATOR"></column>
        </insert>

        <insert tableName="user">
            <column name="firstName" value="Greg"></column>
            <column name="lastName" value="Split"></column>
            <column name="post_id" value="3"></column>
            <column name="role" value="USER"></column>
        </insert>
    </changeSet>

    <changeSet id="7"  author="ievgen">
        <createTable tableName="user_post">
            <column name="id_user" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column  name="id_post" type="BIGINT">
                <constraints  nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="user_post" baseColumnNames="id_user"
                                 constraintName="fk_user-post_user_id" referencedTableName="user"
                                 referencedColumnNames="id" onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="user_post" baseColumnNames="id_post"
                                 constraintName="fk_post-post_user_id" referencedTableName="post"
                                 referencedColumnNames="id"/>

    </changeSet>
</databaseChangeLog>